<div class="w-64 bg-white shadow-strong border-r border-neutral-200 flex flex-col">
  <!-- Sidebar Header -->
  <div class="p-6 border-b border-neutral-200">
    <div class="w-12 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto mb-4 rounded-full"></div>
    <h2 class="text-lg font-display font-semibold text-neutral-800 text-center">Admin Panel</h2>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 p-4 space-y-2">
    <% navigation_items.each do |item| %>
    <%= link_to item[:path], 
        class: "flex items-center px-4 py-3 rounded-xl text-neutral-600 hover:text-primary-600 hover:bg-primary-50 transition-all duration-300 group #{'bg-gradient-to-r from-primary-50 to-accent-50 text-primary-700 border border-primary-200' if item[:active]}" do %>
    <div class="mr-3 text-neutral-400 group-hover:text-primary-500 transition-colors duration-300 <%= 'text-primary-600' if item[:active] %>">
      <%= raw icon_svg(item[:icon]) %>
    </div>
    <span class="font-body font-medium"><%= item[:title] %></span>
    <% end %>
    <% end %>
  </nav>

  <!-- Sidebar Footer -->
  <div class="p-4 border-t border-neutral-200">
    <div class="w-8 h-1 bg-gradient-to-r from-neutral-300 to-neutral-400 mx-auto rounded-full"></div>
  </div>
</div>