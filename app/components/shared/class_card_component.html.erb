<%= link_to ballet_level_path(id: ballet_class.name), class: "group block" do %>
<div class="bg-white rounded-2xl shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 overflow-hidden border border-neutral-100">
  <!-- Image Container -->
  <div class="relative overflow-hidden aspect-[4/3]">
    <% if ballet_class.picture.representable? %>
    <%= image_tag ballet_class.picture, 
            class: "w-full h-full object-cover transition-transform duration-700 group-hover:scale-110",
            alt: "#{ballet_class.name} ballet class" %>
    <% else %>
    <!-- Placeholder for classes without images -->
    <div class="w-full h-full bg-gradient-to-br from-primary-100 to-accent-100 flex items-center justify-center">
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-3 bg-gradient-to-br from-primary-400 to-accent-400 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <p class="text-primary-600 font-body font-medium">Ballet Class</p>
      </div>
    </div>
    <% end %>

    <!-- Subtle overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Decorative accent line -->
    <div class="w-12 h-0.5 bg-gradient-to-r from-primary-400 to-accent-400 mb-4 rounded-full"></div>

    <h3 class="text-xl font-display font-medium text-neutral-900 mb-3 group-hover:text-primary-700 transition-colors duration-300">
      <%= ballet_class.name %>
    </h3>


  </div>

  <!-- Hover indicator -->
  <div class="px-6 pb-6">
    <div class="flex items-center justify-between text-primary-600 font-body font-medium text-sm group-hover:text-primary-700 transition-colors duration-300">
      <span>Learn More</span>
      <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</div>
<% end %>