<section class="relative overflow-hidden py-20">
  <!-- Background with enhanced gradient and subtle pattern -->
  <div class="absolute inset-0 bg-gradient-to-br <%= background_classes %> opacity-95"></div>
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=" 60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg" %3E%3Cg fill="none" fill-rule="evenodd" %3E%3Cg fill="%23ffffff" fill-opacity="0.03" %3E%3Ccircle cx="30" cy="30" r="2" /%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>

  <!-- Content -->
  <div class="relative max-w-7xl mx-auto text-center px-4 sm:px-6 lg:px-8">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-transparent via-white to-transparent opacity-30"></div>

    <div class="mb-8">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight text-white drop-shadow-lg">
        <%= title %>
      </h2>

      <% if subtitle.present? %>
      <p class="text-xl lg:text-2xl text-neutral-100 mb-10 max-w-3xl mx-auto font-body font-light leading-relaxed opacity-95">
        <%= subtitle %>
      </p>
      <% end %>
    </div>

    <% if button_text.present? && button_link.present? %>
    <div class="animate-fade-in transform hover:scale-105 transition-transform duration-300">
      <%= render Shared::ButtonComponent.new(
              text: button_text,
              link: button_link,
              variant: :cta,
              size: :large
            ) %>
    </div>
    <% end %>

    <!-- Bottom decorative element -->
    <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-transparent via-white to-transparent opacity-30"></div>
  </div>
</section>