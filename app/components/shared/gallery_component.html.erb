<section class="py-12">
  <% if title.present? %>
  <div class="text-center mb-12">
    <h2 class="text-3xl font-display font-bold text-neutral-900 mb-4 leading-tight">
      <%= title %>
    </h2>
    <% if subtitle.present? %>
    <p class="text-lg text-neutral-600 font-body leading-relaxed max-w-2xl mx-auto">
      <%= subtitle %>
    </p>
    <% end %>
  </div>
  <% end %>

  <div class="grid <%= grid_classes %> gap-6">
    <% if images.any? %>
    <% images.each_with_index do |image, index| %>
    <% if image.representable? %>
    <div class="group relative overflow-hidden rounded-xl shadow-medium hover:shadow-strong transition-all duration-300 transform hover:-translate-y-1 cursor-pointer" data-controller="lightbox" data-action="click->lightbox#open" data-lightbox-image-url-value="<%= url_for(image) %>" data-lightbox-image-alt-value="Gallery image">
      <%= image_tag image.blob, 
                class: "w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110", 
                alt: "Gallery image" %>

      <!-- Overlay on hover - only visible on hover -->
      <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-30 transition-all duration-300 flex items-center justify-center pointer-events-none">
        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
          </svg>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
    <% else %>
    <!-- Placeholder for when no images are available -->
    <div class="col-span-full text-center py-12">
      <div class="text-neutral-400">
        <svg class="mx-auto h-12 w-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-lg font-body">Gallery images coming soon</p>
      </div>
    </div>
    <% end %>
  </div>
</section>