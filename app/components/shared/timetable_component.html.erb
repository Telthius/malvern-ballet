<div class="timetable-container">
  <!-- Weekly Schedule Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
    <% days.each do |day| %>
    <div class="day-column">
      <!-- Day Header -->
      <div class="h-12 bg-gradient-to-r from-neutral-50 to-neutral-100 rounded-t-2xl border border-neutral-200 flex items-center justify-center">
        <h3 class="text-base font-display font-semibold text-neutral-800 text-center">
          <%= day[:name] %>
        </h3>
      </div>

      <!-- Classes for the Day with Integrated Time Slots -->
      <div class="relative h-[calc(17*3rem)] border border-neutral-200 rounded-b-2xl overflow-hidden">
        <!-- Time Grid Lines (subtle) -->
        <% time_slots.each_with_index do |slot, index| %>
        <div class="absolute left-0 right-0 border-t border-neutral-100" style="top: <%= index * 3 %>rem;">
          <div class="absolute left-2 top-0 transform -translate-y-1/2 z-10">
            <span class="text-xs font-mono text-neutral-400 bg-white px-1 border border-neutral-200 rounded">
              <%= slot[:label] %>
            </span>
          </div>
        </div>
        <% end %>

        <% if day[:classes].present? %>
        <% day[:classes].each do |class_data| %>
        <% class_time = class_data[:class_time] %>
        <% column = class_data[:column] %>
        <% total_columns = day[:classes].select { |c| (c[:start_time] < class_time.end_time && c[:end_time] > class_time.start_time) }.length %>
        <% available_width = total_columns > 1 ? "calc(100% - 2.5rem)" : "calc(100% - 0.5rem)" %>
        <% column_width = total_columns > 1 ? "calc((100% - 2.5rem) / #{total_columns})" : "calc(100% - 0.5rem)" %>
        <% left_offset = total_columns > 1 ? "#{column * (100.0 / total_columns)}%" : "0.25rem" %>

        <div class="class-block absolute rounded-lg shadow-medium hover:shadow-strong transition-all duration-300 transform hover:-translate-y-1 cursor-pointer group" style="
                    top: <%= calculate_class_position(class_time.start_time) %>rem;
                    height: <%= calculate_class_height(class_time.start_time, class_time.end_time) %>rem;
                    left: <%= total_columns > 1 ? "calc(2.5rem + (#{column} * #{column_width}))" : "calc(0.25rem + 2.5rem)" %>;
                    width: <%= total_columns > 1 ? "#{column_width}" : "calc(100% - 2.5rem)" %>;
                  " title="<%= class_time.ballet_class.ballet_level.name %> - <%= format_time(class_time.start_time) %> to <%= format_time(class_time.end_time) %>">
          <!-- Class Content -->
          <div class="h-full bg-gradient-to-r <%= class_level_color(class_time.ballet_class.ballet_level.id) %> text-white p-2 rounded-lg relative overflow-hidden">
            <!-- Default view (class name) -->
            <div class="h-full flex items-center justify-center text-center group-hover:hidden">
              <h4 class="font-display font-semibold text-[10px] leading-tight">
                <%= class_time.ballet_class.ballet_level.name %>
              </h4>
            </div>

            <!-- Hover view (time information) -->
            <div class="h-full flex items-center justify-center text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-[10px] font-mono font-semibold">
                <%= format_time(class_time.start_time) %> - <%= format_time(class_time.end_time) %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% else %>
        <!-- No Classes Today -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center text-neutral-400">
            <svg class="w-8 h-8 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="font-body text-xs">No classes</p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>