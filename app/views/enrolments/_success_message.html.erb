<div id="enrolment-form-container" class="bg-white rounded-2xl shadow-strong border border-neutral-100 overflow-hidden">
  <!-- Success Header -->
  <div class="bg-gradient-to-r from-green-600 to-green-700 px-8 py-12 text-center">
    <div class="w-16 h-1 bg-white mx-auto mb-6 rounded-full opacity-60"></div>
    <h2 class="text-3xl sm:text-4xl font-display font-light text-white mb-4">
      Application Submitted!
    </h2>
  </div>

  <!-- Success Content -->
  <div class="px-8 py-12 text-center">
    <div class="max-w-2xl mx-auto">
      <!-- Success Icon -->
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
        <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>

      <!-- Success Message -->
      <h3 class="text-2xl sm:text-3xl font-display font-light text-neutral-900 mb-4">
        Thank You!
      </h3>
      <p class="text-lg text-neutral-600 font-body mb-6">
        Your request has been submitted successfully. We'll be in touch soon with personalized recommendations and next steps.
      </p>
      <p class="text-sm text-neutral-500 font-body">
        You should receive an email from us shortly.
      </p>

      <!-- Optional: Link back to form if they want to submit another -->
      <div class="mt-8">
        <%= link_to "Submit Another Application", new_enrolment_path, 
          class: "inline-flex items-center px-6 py-3 bg-white border-2 border-primary-600 text-primary-600 font-body font-semibold rounded-xl hover:bg-primary-50 transition-all duration-300" %>
      </div>
    </div>
  </div>
</div>