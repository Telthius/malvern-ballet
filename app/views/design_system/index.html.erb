<div class="min-h-screen bg-neutral-50">
  <!-- Header Section -->
  <div class="bg-white border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h1 class="text-4xl font-brand font-bold text-neutral-900 mb-4">Design System</h1>
      <p class="text-lg font-body text-neutral-600">Malvern Ballet School - Component Library & Design Tokens</p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Typography Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-display font-bold text-neutral-900 mb-8">Typography</h2>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Font Brand -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Font Brand</h3>
          <div class="space-y-4">
            <div class="font-brand text-4xl font-bold text-neutral-900">Northwave</div>
            <div class="font-brand text-2xl font-medium text-neutral-700">Ballet Elegance</div>
            <div class="font-brand text-lg text-neutral-600">Special brand moments</div>
            <p class="text-sm font-body text-neutral-500">Used for: Logo "Malvern", hero headings, special brand elements</p>
          </div>
        </div>

        <!-- Font Display -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Font Display</h3>
          <div class="space-y-4">
            <div class="font-display text-4xl font-bold text-neutral-900">Josefin Sans</div>
            <div class="font-display text-2xl font-medium text-neutral-700">Elegant Headings</div>
            <div class="font-display text-lg text-neutral-600">Section titles</div>
            <p class="text-sm font-body text-neutral-500">Used for: Main headings, section titles, "Ballet School"</p>
          </div>
        </div>

        <!-- Font Body -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Font Body</h3>
          <div class="space-y-4">
            <div class="font-body text-4xl font-bold text-neutral-900">Inter</div>
            <div class="font-body text-2xl font-medium text-neutral-700">Highly Readable</div>
            <div class="font-body text-lg text-neutral-600">Body text & paragraphs</div>
            <p class="text-sm font-body text-neutral-500">Used for: Body text, subtitles, general content</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Color Palette Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-display font-bold text-neutral-900 mb-8">Color Palette</h2>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Primary Colors -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Primary (Elegant Purple)</h3>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-primary-50 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">primary-50</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-primary-500 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">primary-500</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-primary-600 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">primary-600</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-primary-800 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">primary-800</span>
            </div>
          </div>
        </div>

        <!-- Accent Colors -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Accent (Elegant Sage Green)</h3>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-accent-50 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">accent-50</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-accent-500 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">accent-500</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-accent-600 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">accent-600</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-accent-800 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">accent-800</span>
            </div>
          </div>
        </div>

        <!-- Neutral Colors -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Neutral</h3>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-neutral-50 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">neutral-50</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-neutral-200 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">neutral-200</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-neutral-600 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">neutral-600</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-neutral-900 rounded border border-neutral-200"></div>
              <span class="font-body text-sm text-neutral-600">neutral-900</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Component Showcase Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-display font-bold text-neutral-900 mb-8">Components</h2>

      <div class="space-y-12">
        <!-- Buttons -->
        <div class="bg-gradient-to-br from-white to-primary-50/30 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Buttons</h3>
          <div class="flex flex-wrap gap-4">
            <%= render Shared::ButtonComponent.new(text: "Primary Button", variant: :primary, size: :medium) %>
            <%= render Shared::ButtonComponent.new(text: "Secondary Button", variant: :secondary, size: :medium) %>
            <%= render Shared::ButtonComponent.new(text: "Accent Button", variant: :accent, size: :medium) %>
            <%= render Shared::ButtonComponent.new(text: "Outline Button", variant: :outline, size: :medium) %>
          </div>
          <div class="flex flex-wrap gap-4 mt-4">
            <%= render Shared::ButtonComponent.new(text: "Small", variant: :primary, size: :small) %>
            <%= render Shared::ButtonComponent.new(text: "Medium", variant: :primary, size: :medium) %>
            <%= render Shared::ButtonComponent.new(text: "Large", variant: :primary, size: :large) %>
          </div>
        </div>

        <!-- Cards -->
        <div class="bg-gradient-to-br from-white to-primary-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Cards</h3>
          <div class="grid md:grid-cols-2 gap-6">
            <%= render Shared::CardComponent.new(
                  title: "Elegant Card",
                  subtitle: "With hover effects and subtle animations",
                  shadow: :medium
                ) do %>
            <p class="font-body text-neutral-600">This card now features elegant hover effects, subtle accent lines, and smooth transitions that make it feel more premium and interactive.</p>
            <% end %>

            <%= render Shared::CardComponent.new(
                  title: "Enhanced Shadow",
                  subtitle: "With dramatic depth and hover states",
                  shadow: :strong
                ) do %>
            <p class="font-body text-neutral-600">This card uses the strong shadow variant and includes enhanced hover animations for a more engaging user experience.</p>
            <% end %>
          </div>
        </div>

        <!-- Profile Cards -->
        <div class="bg-gradient-to-br from-white to-accent-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Profile Cards</h3>
          <div class="max-w-7xl">
            <%= render Shared::ProfileCardComponent.new(
                  name: "Sample Profile",
                  role: "Ballet Instructor",
                  image: "saba.webp",
                  bio: "This enhanced profile card now features elegant hover effects, subtle gradients, and smooth image scaling animations that create a more premium and engaging experience."
                ) %>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="bg-gradient-to-br from-white to-primary-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Call to Action</h3>
          <%= render Shared::CtaComponent.new(
                title: "Enhanced CTA Section",
                subtitle: "This redesigned CTA now features elegant gradients, subtle patterns, decorative elements, and enhanced typography that creates a more compelling and visually striking call-to-action.",
                button_text: "Learn More",
                button_link: "#",
                background: :blue
              ) %>
        </div>

        <!-- Form Component Showcase -->
        <div class="bg-gradient-to-br from-white to-primary-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Form Component</h3>
          <p class="text-neutral-600 font-body mb-6">Elegant, accessible forms with beautiful styling and validation feedback.</p>
          <%= render Shared::FormComponent.new(
                form_object: Enrolment.new,
                title: "Register Your Interest",
                submit_text: "Submit Application",
                submit_variant: :primary
              ) %>
        </div>

        <!-- Admin Form Component Showcase -->
        <div class="bg-gradient-to-br from-white to-accent-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Admin Form Component</h3>
          <p class="text-neutral-600 font-body mb-6">Flexible admin forms with customizable field types and consistent styling.</p>
          <%= render Admin::FormComponent.new(
                form_object: Timetable.new,
                submit_text: "Create Timetable",
                cancel_path: "#",
                fields: [
                  {
                    name: :name,
                    label: "Timetable Name",
                    type: :text,
                    placeholder: "e.g., Term 1 2024",
                    autofocus: true
                  },
                  {
                    name: :term,
                    label: "Term",
                    type: :select,
                    options: [
                      ['Term 1', '1'],
                      ['Term 2', '2'], 
                      ['Term 3', '3'],
                      ['Term 4', '4']
                    ],
                    prompt: 'Select term'
                  },
                  {
                    name: :start_date,
                    label: "Start Date",
                    type: :date
                  },
                  {
                    name: :end_date,
                    label: "End Date",
                    type: :date
                  }
                ]
              ) %>
        </div>

        <!-- Timetable Component Showcase -->
        <div class="bg-gradient-to-br from-white to-primary-50/20 p-8 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-2xl font-display font-semibold text-neutral-900 mb-6">Timetable Component</h3>
          <p class="text-neutral-600 font-body mb-6">Beautiful weekly class schedules with clear time representation and elegant styling.</p>
          <!-- Create sample timetable data for showcase -->
          <% sample_timetable = OpenStruct.new(
            monday: [OpenStruct.new(
              start_time: Time.current.change(hour: 16, min: 0),
              end_time: Time.current.change(hour: 17, min: 0),
              ballet_class: OpenStruct.new(
                ballet_level: OpenStruct.new(id: 1, name: "Pre-Primary")
              )
            )],
            tuesday: [OpenStruct.new(
              start_time: Time.current.change(hour: 17, min: 30),
              end_time: Time.current.change(hour: 18, min: 30),
              ballet_class: OpenStruct.new(
                ballet_level: OpenStruct.new(id: 2, name: "Primary")
              )
            )],
            wednesday: [],
            thursday: [OpenStruct.new(
              start_time: Time.current.change(hour: 16, min: 0),
              end_time: Time.current.change(hour: 17, min: 0),
              ballet_class: OpenStruct.new(
                ballet_level: OpenStruct.new(id: 3, name: "Grade 1")
              )
            )],
            friday: [],
            saturday: [OpenStruct.new(
              start_time: Time.current.change(hour: 9, min: 0),
              end_time: Time.current.change(hour: 10, min: 0),
              ballet_class: OpenStruct.new(
                ballet_level: OpenStruct.new(id: 4, name: "Grade 2")
              )
            )]
          ) %>
          <%= render Shared::TimetableComponent.new(
                timetable_classes: sample_timetable,
                timetable: OpenStruct.new(ballet_levels: [])
              ) %>
        </div>

      </div>
    </section>

    <!-- Spacing & Shadows Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-display font-bold text-neutral-900 mb-8">Spacing & Shadows</h2>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Shadows -->
        <div class="bg-white p-6 rounded-xl border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Shadow Variants</h3>
          <div class="space-y-4">
            <div class="p-4 bg-white shadow-soft rounded">shadow-soft</div>
            <div class="p-4 bg-white shadow-medium rounded">shadow-medium</div>
            <div class="p-4 bg-white shadow-strong rounded">shadow-strong</div>
          </div>
        </div>

        <!-- Spacing -->
        <div class="bg-white p-6 rounded-xl border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Common Spacing</h3>
          <div class="space-y-4">
            <div class="bg-neutral-100 p-2 text-sm font-body">p-2 (0.5rem)</div>
            <div class="bg-neutral-100 p-4 text-sm font-body">p-4 (1rem)</div>
            <div class="bg-neutral-100 p-6 text-sm font-body">p-6 (1.5rem)</div>
            <div class="bg-neutral-100 p-8 text-sm font-body">p-8 (2rem)</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Animations Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-display font-bold text-neutral-900 mb-8">Animations</h2>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Animation Classes -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Animation Classes</h3>
          <div class="space-y-4">
            <div class="p-4 bg-primary-100 animate-fade-in">animate-fade-in</div>
            <div class="p-4 bg-accent-100 animate-slide-up">animate-slide-up</div>
            <div class="p-4 bg-neutral-100 animate-float">animate-float</div>
            <div class="p-4 bg-primary-100 animate-bounce-gentle">animate-bounce-gentle</div>
          </div>
        </div>

        <!-- Transitions -->
        <div class="bg-white p-6 rounded-xl shadow-soft border border-neutral-200">
          <h3 class="text-lg font-display font-semibold text-neutral-900 mb-4">Transitions</h3>
          <div class="space-y-4">
            <div class="p-4 bg-primary-500 text-white rounded transition-all duration-200 hover:bg-primary-600 hover:scale-105 cursor-pointer">
              Hover me (scale + color)
            </div>
            <div class="p-4 bg-accent-500 text-white rounded transition-all duration-300 hover:bg-accent-600 hover:-translate-y-1 cursor-pointer">
              Hover me (lift + color)
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>