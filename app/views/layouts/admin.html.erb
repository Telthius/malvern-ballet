<!DOCTYPE html>
<html lang="en">

<head>
  <title>Malvern Ballet - Admin</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="turbo-cache-control" content="no-cache">
  <meta name="description" content="Malvern Ballet School Admin Panel">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%= favicon_link_tag asset_path("favicon.ico") %>
</head>

<body class="bg-gradient-to-br from-neutral-50 to-primary-50/20 min-h-screen">
  <%= render Layout::HeaderComponent.new(current_page: "admin") %>

  <!-- Admin Layout -->
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%= render Layout::AdminSidebarComponent.new(current_page: controller_name) %>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col">
      <!-- Flash Messages -->
      <div id="flash" class="p-4">
        <%= render "layouts/flash" %>
      </div>

      <!-- Page Content -->
      <div class="flex-1 p-6">
        <%= yield %>
      </div>
    </main>
  </div>

  <%= render Layout::FooterComponent.new %>
</body>

</html>