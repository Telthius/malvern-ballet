<%= render Admin::FormComponent.new(
  form_object: ballet_level,
  submit_text: ballet_level.persisted? ? "Update Ballet Level" : "Create Ballet Level",
  cancel_path: admin_ballet_levels_path,
  fields: [
    {
      name: :name,
      label: "Ballet Level Name",
      type: :text,
      placeholder: "e.g., Pre-Primary, Grade 1, Intermediate",
      autofocus: true
    },
    {
      name: :description,
      label: "Description",
      type: :textarea,
      placeholder: "Describe this ballet level, including age range, skill requirements, etc.",
      rows: 4
    },
    {
      name: :picture,
      label: "Picture",
      type: :file,
      placeholder: "Upload an image for this ballet level"
    }
  ]
) %>