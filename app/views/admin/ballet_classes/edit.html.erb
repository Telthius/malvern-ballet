<!-- Back Link -->
<div class="mb-4">
  <%= link_to admin_timetable_ballet_class_path(@timetable, @ballet_class), 
      class: "inline-flex items-center text-neutral-600 hover:text-primary-600 transition-colors duration-300" do %>
  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
  </svg>
  Back to <%= @ballet_class.class_name %>
  <% end %>
</div>

<%= render Admin::PageHeaderComponent.new(
  title: "Edit Ballet Class",
  subtitle: "Update #{@ballet_class.class_name} in #{@timetable.name}"
) %>

<%= turbo_frame_tag @ballet_class do %>
<%= render "form", timetable: @timetable, ballet_class: @ballet_class %>
<% end %>