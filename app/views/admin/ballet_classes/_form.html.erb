<%= form_with model: [:admin, ballet_class] do |f| %>
  <% if ballet_class.errors.any? %>
    <div class="error-message">
      <%= ballet_class.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="admin-item admin-item-create flex jc-sb">
    <div class="admin-form-fields flex ai-c">
      <%= f.text_field :class_name, input_html: { autofocus: true }, placeholder: "placeholder text", class: 'admin-form-field' %>
      <%= f.label :ballet_level_id, "Level: ", class: 'admin-form-field' %>
      <%= f.collection_select :ballet_level_id, BalletLevel.all, :id, :name, {prompt: true}, {class: "admin-form-field"} %>
    </div>
    <div class="ballet-class__actions flex">
      <%= link_to "", admin_ballet_classes_path, class: "admin-button touch cancel" %>
      <%= button_tag "", class:"admin-button touch new" %>
    </div>
  </div>
<% end %>