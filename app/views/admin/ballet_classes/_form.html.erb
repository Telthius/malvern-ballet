<%= render Admin::FormComponent.new(
  form_object: ballet_class,
  submit_text: ballet_class.persisted? ? "Update Ballet Class" : "Create Ballet Class",
  cancel_path: admin_timetable_path(timetable),
  parent_objects: [timetable],
  fields: [
    {
      name: :class_name,
      label: "Class Name",
      type: :text,
      placeholder: "e.g., Pre-Primary Ballet",
      autofocus: true
    },
    {
      name: :ballet_level_id,
      label: "Ballet Level",
      type: :select,
      options: BalletLevel.all.map { |level| [level.name, level.id] },
      prompt: 'Select ballet level'
    }
  ]
) %>