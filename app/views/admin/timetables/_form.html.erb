<%= render Admin::FormComponent.new(
  form_object: timetable,
  submit_text: timetable.persisted? ? "Update Timetable" : "Create Timetable",
  cancel_path: admin_timetables_path,
  fields: [
    {
      name: :name,
      label: "Timetable Name",
      type: :text,
      placeholder: "e.g., Term 1 2024",
      autofocus: true
    },
    {
      name: :term,
      label: "Term",
      type: :select,
      options: [
        ['Term 1', '1'],
        ['Term 2', '2'], 
        ['Term 3', '3'],
        ['Term 4', '4']
      ],
      prompt: 'Select term'
    },
    {
      name: :start_date,
      label: "Start Date",
      type: :date
    },
    {
      name: :end_date,
      label: "End Date",
      type: :date
    }
  ]
) %>