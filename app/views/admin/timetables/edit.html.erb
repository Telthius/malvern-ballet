<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center gap-4 mb-4">
    <%= link_to admin_timetable_path(@timetable), 
        class: "inline-flex items-center text-neutral-600 hover:text-primary-600 transition-colors duration-300" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Timetable
    <% end %>
  </div>
  <h1 class="text-3xl font-display font-semibold text-neutral-800 mb-2">Edit Timetable</h1>
  <p class="text-neutral-600 font-body">Update the details for <%= @timetable.name %></p>
</div>

<!-- Form (Turbo Frame) -->
<%= turbo_frame_tag @timetable do %>
<%= render "form", timetable: @timetable %>
<% end %>